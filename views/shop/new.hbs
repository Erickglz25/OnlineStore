    <div class="row" id="bodyRow">


     <br>
      <div class="col-md-4" id="borderform">
        <form action="/new" method="POST" class="navbar-form navbar-left" role="search">
          <div class="form-group">
            <label for="name" class="formPad">Nombre </label>
            <input id="name" name="name" type="text" class="form-control"  placeholder="Name" >
            <br>
            <label for="imagePath" class="formPad">Foto Original</label>
            <input id="imagePath" name="imagePath" type="text" class="form-control" placeholder="URL">
            <br>
            <label for="tag" class="formPad">tag</label>
            <input id="tag" name="tag" type="text" class="form-control" placeholder="animal-y-natural">
            <br>
            <label for="dimensiones" class="formPad">Dimensiones </label>
            <input id="dimensions" name="dimensions" type="text" class="form-control"  placeholder="130x90 c/u" >
            <br>
            <label for="price" class="formPad">Precio Menudeo</label>
            <input id="price" name="price" type="text" class="form-control" placeholder="menudeo">
            <br>

            <label for="stock" class="formPad">Stock</label>
            <input id="stock" name="stock" type="text" class="form-control"  placeholder="Disponibilidad" >
            <br>



             <label for="codigo" class="formPad">Codigo</label>
            <input id="code" name="code" type="text" class="form-control"  placeholder="Codigo" >
            <br>
          </div>

      </div>
           <div class="col-md-5">

                <div class="form-group">

                   <label for="author" class="formPad">Autor</label>
                   <input id="author" name="author" type="text" class="form-control"  placeholder="Autor(s)" >

                   <label for="weight" class="formPad">Peso</label>
                   <input id="weight" name="weight" type="text" class="form-control"  placeholder="Peso" >

                   <label for="year" class="formPad">Año</label>
                   <input id="year" name="year" type="text" class="form-control"  placeholder="año" >


                   <label for="lifestyle" class="formPad">Lifestyle</label>
                   <input id="lifestyle" name="lifestyle" type="text" class="form-control"  placeholder="lifestyle" >

                   <label for="rel1" class="formPad">Imagen Relacionada 1</label>
                   <input id="rel1" name="rel1" type="text" class="form-control"  placeholder="rel1_triptico_hojas.png" >

