<div class="container s-container">
  <div class="row">
    <div class="col-md-4">
      <h4 class="bolderl">Sign in to continue</h4>
      <p class="text-center"><small>Don't have an account yet? <a href="/user/signup">Sign Up?</a></small></p>
      <hr>
      {{# if hasErrors}}
          <div class="alert alert-danger">

              {{#each messages}}
                  <center>
                  <p><i class="fa fa-exclamation-circle" aria-hidden="true" style="color: indianred;"></i>&nbsp;{{this}}</p>
                  </center>
              {{/each}}
          </div>
      {{/ if}}
      {{# if hasErrors1}}
          <div class="alert alert-success">

              {{#each msg}}
                  <center>
                  <p><i class="fa fa-exclamation-circle" aria-hidden="true" style="color: indianred;"></i>&nbsp;{{this}}</p>
                  </center>
              {{/each}}
          </div>
      {{/ if}}
      <form action="/user/signin" method="post" name="fsignin">

        <label for="email">E-mail address</label>
        <input class="form-control" type="email" id="email" name="email">

        <label for="password">Password</label>
        <input class="form-control" type="password" id="password" name="password">

        <input type="hidden" name="_csrf" value="{{ csrfToken }}">

        <hr>
        <button type="submit" class="btn btn-primary btn-md btn-block">Sign In</button>
      </form>
      <p class="text-center"><small><a href="/user/forgot">forgot your password?</a></small></p>
    </div>
    <div class="col-md-8">
      <div class="card text-center">
        <div class="card-header">
        Or sign in with:
        </div>
        <div class="card-body">
          <h5 class="card-title">Special title treatment</h5>
          <p class="card-text">With supporting text below as a natural lead-in to additional content.</p>
          <a href="/user/auth/google" class="btn btn-primary" id="socialbtn"><img src="/images/r_google.png" width="16px">&nbsp Google</a>
          <a href="/user/auth/facebook" class="btn btn-primary" id="socialbtn"><img src="/images/r_face.png" width="16px">&nbsp Facebook</a>
        </div>
        <div class="card-footer text-muted">
          2 days ago
        </div>
      </div>
    </div>
  </div>
</div>
