{{# if newOrders }}
  <div class="alert alert-danger alert-dismissible">
    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
    <h4><i class="icon fa fa-bell-o"></i> You have {{newOrders}} new Orders</h4>
    Once everything is in order, send the tracking number to complete the order
  </div>
{{/ if}}
<div class="row">
  <div class="col-md-12">
    <div class="box">
      <div class="box-header">
        <h3 class="box-title">Order List</h3>
      </div>
      <!-- /.box-header -->
      <div class="box-body table-responsive no-padding">
        <table class="table table-hover">
          <tr>
            <th style="width:62px">Update</th>
            <th>Client name</th>
            <th>Payment Id</th>
            <th>Total Price</th>
            <th class="text-danger">Status</th>
          </tr>
          {{# each orderList}}
            <tr>
              <td><a href="/admin/orderview-{{this._id}}" class="btn btn-info btn-sm" > View </a>
              <td>{{this.name}}</td>
              <td>{{this.paymentId}}</td>
              <td>$ {{this.cart.totalPrice}}</td>
              <td>
                <p class="badge badge-dark"> {{this.status}} </p>
              </td><!--class also can be  warning,danger,primary-->
            </tr>
          {{/ each}}
        </table>
      </div>
      <!-- /.box-body -->
    </div>
    <!-- /.box -->
  </div>
</div>
